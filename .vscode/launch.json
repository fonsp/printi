    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Run API server",
            "type": "pwa-node",
            "program": "${workspaceFolder}/api/main.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect",
                "--allow-read",
                "--allow-net",
                // "--allow-run"
            ],
            "args": [
                "--port=6677"
            ],
            "attachSimplePort": 9229
        }
    ]
}